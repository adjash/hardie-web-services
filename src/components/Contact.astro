<section class="contact text-center py-24 px-6" id="contact">
  <h2 class="text-4xl font-bold text-primary mb-6">Contact Us</h2>
  <form action="mailto:contact@hardiewebservices.com" method="post" enctype="text/plain" class="mt-8 max-w-lg mx-auto space-y-6 bg-white p-8 shadow-lg rounded-lg">
    <div>
      <label for="name" class="block text-lg font-medium text-primary mb-1">Name</label>
      <input type="text" id="name" name="name" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-secondary">
    </div>
    <div>
      <label for="email" class="block text-lg font-medium text-primary mb-1">Email</label>
      <input type="email" id="email" name="email" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-secondary">
    </div>
    <div>
      <label for="message" class="block text-lg font-medium text-primary mb-1">Message</label>
      <textarea id="message" name="message" required class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-secondary"></textarea>
    </div>
    <button type="submit" class="bg-secondary text-white font-semibold px-6 py-3 rounded-lg shadow-lg transition duration-300 hover:bg-secondaryHover">Send Message</button>
  </form>
</section>
