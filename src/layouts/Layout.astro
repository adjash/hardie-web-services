---
import Analytics from '../components/Analytics.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<Analytics/>
		<meta charset="UTF-8" />
		<meta name="description" content="Hardie Web Services - Professional web development, SEO, and digital marketing services. We help businesses elevate their online presence with custom websites, optimized search engine visibility, and engaging design." />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<!-- Primary Meta Tags -->
		<title>{title} | Hardie Web Services</title>
		<meta name="keywords" content="web development, SEO, digital marketing, website design, Hardie Web Services, online presence, custom websites, SEO optimization" />
		<meta name="author" content="Hardie Web Services" />

		<!-- Open Graph Meta Tags -->
		<meta property="og:title" content="Hardie Web Services - Web Development, SEO, and Digital Marketing" />
		<meta property="og:description" content="Expert web development, SEO, and digital marketing services to boost your online presence." />
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://yourwebsite.com" />
		<meta property="og:image" content="https://yourwebsite.com/preview-image.jpg" />

		<!-- Twitter Meta Tags -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content="Hardie Web Services - Web Development, SEO, and Digital Marketing" />
		<meta name="twitter:description" content="Helping businesses grow with expert web development, SEO, and digital marketing." />
		<meta name="twitter:image" content="https://yourwebsite.com/preview-image.jpg" />
	</head>
	<body>
		<!-- Google Tag Manager (noscript) -->
		<noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-MXR6FZPW" height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
		<!-- End Google Tag Manager (noscript) -->
		<slot />
	</body>
</html>
<style is:global>
	html {
		scroll-behavior: smooth;
	}
</style>
